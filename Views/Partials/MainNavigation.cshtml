@inherits Umbraco.Web.Mvc.UmbracoViewPage
@using Umbraco.Web

    @{
        var homePage = (LingsCars.Models.ContentTypes.HomePage)Model.Root(); 
        var mediaItem = Umbraco.Media(1094);
    }


    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
            @if (mediaItem != null)
            {
                var url = mediaItem.Url();
                <img src="@url" alt="Brand Logo" height="70">
            }   

            @{
                var links = homePage.NavLinks;
                if (links.Any())
                {
                    <ul class="nav navbar-nav navbar-center mr-auto mt-2 mt-lg-0">
                        <li class="nav-item  @Html.Raw(Model.Id == homePage.Id ? "active" : "")">
                            <a class="nav-link" href="@homePage.Url">@homePage.Name</a>
                        </li>
                        @foreach (var link in links)
                        {
                            <li class="nav-item @link.Name == Model.Name ? " active" : null)">
                                <a class="nav-link" href="@link.Url">@link.Name</a>
                            </li>
                        }

                    </ul>
                }
            }

        </div>
    </nav>
