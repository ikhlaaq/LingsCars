@inherits Umbraco.Web.Mvc.UmbracoViewPage
@{
	Layout = null;
}

@* the fun starts here *@


    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <title>Lings Cars</title>
        <!-- Font Awesome -->
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
        <!-- Google Fonts -->
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap">
        <!-- Bootstrap core CSS -->
        <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
            <style>
            .navbar-nav.navbar-center {
                position: absolute;
                left: 50%;
                transform: translatex(-50%);
            }
        </style>
    </head>

    <body class="skin-light">
        @Html.Partial("MainNavigation")

        <header>
            <div class="position-relative overflow-hidden w-100 text-center bg-info">
                <h1 class="display-4 font-weight-normal" style="color:white">
                    @(Model.HasValue("pageHeading") ?  @Model.Value("pageHeading") : @Model.Name)
                </h1>
                @{
                    var typedMediaPickerSingle =
                    Model.Value<IPublishedContent>
                        ("pageHeaderBackground", fallback: Fallback.ToAncestors);

                    <img src="@typedMediaPickerSingle.Url" style="height:auto; width:100%" "@typedMediaPickerSingle.Value("alt")" />
                }
                <div class="product-device shadow-sm d-none d-md-block"></div>
                <div class="product-device product-device-2 shadow-sm d-none d-md-block"></div>
                <br />
                <form class="text-white" action="/search">
                    <label>                   
                        <input type="search" placeholder=" Find your motor..." name="q" />
                    </label>
                    <button>Search <i class="fa fa-search"></i></button>
                </form>
            </div>
        </header>
  
        <!-- Main layout -->
        <main>
            @RenderBody()
        </main>
        <!-- Main layout -->
        <!-- Footer -->
       @Html.Partial("Footer")
        <!-- Footer -->
        <!-- JQuery -->
        <script src="https://code.jquery.com/jquery-3.5.1.min.js" 
                integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
                crossorigin="anonymous"></script>
        <script type="text/javascript" src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    </body>

    </html>