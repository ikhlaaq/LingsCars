    @inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.VehiclePageDetails>
    @using ContentModels = LingsCars.Models.ContentTypes;
    @{
        Layout = "Master.cshtml";
    }
    <!-- Page Content -->
    <div class="container pb-5">

        <!-- Heading -->
        <h1 class="my-4">
            @Model.Value("title")
        </h1>
        <!-- Item Row -->
        <div class="row">
            <div class="col-md-8">
                @{
                    var typedMediaPickerSingle = Model.Value<IPublishedContent>("image");
                    if (typedMediaPickerSingle != null)
                    {
                        <img src="@typedMediaPickerSingle.Url" style="width: 700px; height:500px; border-radius: 30px" alt="@typedMediaPickerSingle.Value("alt")" />
                    }
                }
            </div>
            <div class="col-md-4">
                <h3 class="my-3">
                    Features
                </h3>
                <p>
                    @Model.Value("description")
                </p>
                <h3 class="my-3">
                    Price
                </h3>
                <h5>
                    @Model.Value("price")
                </h5>
            </div>
        </div>
    </div>
    